<resources>

    <!-- Text styles -->
    <!-- =========== -->
    <style name="TextGothic">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
        <item name="fontPath">fonts/LeagueGothicRegular.otf</item>
    </style>

    <style name="TextGothic.Small">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Views -->
    <!-- ===== -->
    <style name="Divider">
        <item name="android:background">@color/divider_light</item>
    </style>

    <style name="Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:tint">@android:color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Toolbar.Transparent">
        <item name="android:background">@null</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- TextView -->
    <style name="TextView" />

    <style name="TextView.Subheader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView.Label">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="TextView.DisplayGothic">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display4</item>
        <item name="fontPath">fonts/LeagueGothicRegular.otf</item>
    </style>

    <!-- Cheat sheet -->
    <style name="Button" parent="Widget.AppCompat.Button" />

    <!-- Example styles -->
    <!-- ============== -->

    <!-- Alignment example -->
    <style name="Alignment" />

    <style name="Alignment.Handle">
        <item name="android:background">@drawable/ic_stop_black_24dp</item>
    </style>

    <!-- Dimension ratio example -->
    <style name="DimensionRatioImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Chains example -->
    <style name="ChainText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/LeagueGothicRegular.otf</item>

        <item name="android:paddingStart">@dimen/chains_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/chains_text_padding_horizontal</item>
    </style>

    <style name="ChainText.A">
        <item name="android:background">@color/cyan_a100</item>
    </style>

    <style name="ChainText.B">
        <item name="android:background">@color/deep_orange_a400</item>
    </style>

    <style name="ChainText.C">
        <item name="android:background">@color/pink_200</item>
    </style>

    <style name="ChainText.D">
        <item name="android:background">@color/android_green</item>
    </style>

    <style name="ChainImage">
        <item name="android:padding">@dimen/chains_image_padding</item>
    </style>

    <style name="ChainImage.A">
        <item name="srcCompat">@drawable/ic_snowflake_black_24dp</item>
        <item name="android:background">@color/cyan_a100</item>
    </style>

    <style name="ChainImage.B">
        <item name="srcCompat">@drawable/ic_fire_black_24dp</item>
        <item name="android:background">@color/deep_orange_a400</item>
    </style>

    <style name="ChainImage.C">
        <item name="srcCompat">@drawable/ic_spa_black_24dp</item>
        <item name="android:background">@color/pink_200</item>
    </style>

    <style name="ChainImage.D">
        <item name="srcCompat">@drawable/ic_android_black_24dp</item>
        <item name="android:background">@color/android_green</item>
    </style>

    <!-- Dynamic ConstraintLayout example -->
    <style name="DynamicImage">
        <item name="android:background">@android:color/white</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DynamicText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/cyan_a100</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">fonts/LeagueGothicRegular.otf</item>
    </style>

    <!-- List item example -->
    <style name="ListItemText">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/list_tile_text_size</item>
    </style>

    <style name="ListItemText.Attribution">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText.Url">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ListItemText.Attribution.Alternate">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
